{
  "name": "memory-back",
  "version": "1.0.0",
  "description": "Back end for Odin Project memory project",
  "main": "server.js",
  "author": "Jonathan <jonathan.d.potter@outlook.com>",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": "^20.5.0"
  }
  "scripts": {
    "start": "node dist/src/server.js",
    "build": "yarn clean && tsc && yarn copy-files",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u src/**/*.html src/**/*.css src/**/*.svg src/**/*.ico src/**/*.js dist/",
    "postinstall": "yarn build",
    "dev": "nodemon src/server.ts",
    "dist-dev": "nodemon dist/src/server.js",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "node": "^20.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12"
  },
  "devDependencies": {
    "rimraf": "^5.0.1",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  }
